<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>画像投稿フォーム</h1>
      <% if @post_image.errors.any? %>
        <p><%= @post_image.errors.count %>件のエラーが発生しました</p>
        <% @post_image.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: @post_image, local: true do |f| %>
        <div class="form-group">
          <label></label>
          <%= f.attachment_field :image, class:"form-control-file" %>
        </div>
        <div class="form-group">
          <label></label>
          <%= f.text_field :shop_name, class:"form-control" %>
        </div>
        <div class="form-group">
          <label></label>
          <%= f.text_area :caption, class:"form-control" %>
        </div>
        <hr>
        <%= f.submit "投稿", class:"btn btn-info btn-block" %>
      <% end %>
    </div>
  </div>
</div>