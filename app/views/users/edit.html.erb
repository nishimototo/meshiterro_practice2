<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label></label>
          <%= f.text_field :name, placeholder: "名前", class:"form-control" %>
        </div>
        <%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size:"60x60" %>
        <div class="form-group">
          <label></label>
          <%= f.attachment_field :profile_image, class:"form-control-file" %>
        </div>
        <%= f.submit "変更を保存", class:"btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>